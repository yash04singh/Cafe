<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <EditText

                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                android:paddingBottom="10dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:background="#FFE4E2E2"
                android:textColor="#630505" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="1dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COFFEES"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:textStyle="normal"
                android:textColor="#630505"
                android:background="#e4e2e2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOT COFFEE"
                    android:id="@+id/hotcoffee"
                    android:onClick="topping"
                    android:layout_marginLeft="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="15sp" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="45dp"
                    android:text="-"
                    android:id="@+id/hotcoffee_minus"
                    android:textSize="20sp"
                    android:onClick="decrement1"
                    android:textAlignment="center"
                    android:background="@android:color/transparent"
                    android:paddingTop="0dp" />
                <TextView
                    android:id="@+id/hotcoffee_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="+"
                    android:id="@+id/hotcoffee_plus"
                    android:textSize="20sp"
                    android:onClick="increment1"
                    android:background="@android:color/transparent"
                    android:textAlignment="center"
                    android:visibility="visible" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COLD COFFEE"
                    android:id="@+id/coldcoffee"
                    android:onClick="topping"
                    android:layout_marginLeft="16dp"
                    android:paddingLeft="16dp"
                    android:textSize="15sp" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="38dp"
                    android:text="-"
                    android:id="@+id/coldcoffee_minus"
                    android:textSize="20sp"
                    android:onClick="decrement2"
                    android:textAlignment="center"
                    android:background="@android:color/transparent" />
                <TextView
                    android:id="@+id/coldcoffee_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="+"
                    android:id="@+id/coldcoffe_plus"
                    android:textSize="20sp"
                    android:onClick="increment2"
                    android:background="@android:color/transparent"
                    android:textAlignment="center"
                    android:visibility="visible" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOPPINGS"
                    android:id="@+id/toppings"
                    android:textSize="20sp"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="200dp"
                    android:textStyle="normal"
                    android:textColor="#630505"
                    android:background="#e4e2e2" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:paddingRight="4dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="3dp"
                    android:layout_marginLeft="1dp"
                    android:text="OK"
                    android:id="@+id/ok"
                    android:background="#e4e2e2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WHIPPED CREAM"
                    android:id="@+id/whippedcream"
                    android:onClick="topping"
                    android:layout_marginStart="14dp"
                    android:paddingStart="16dp"
                    android:textSize="15sp" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:text="-"
                    android:id="@+id/whippedcream_minus"
                    android:textSize="20sp"
                    android:onClick="decrement3"
                    android:textAlignment="center"
                    android:background="@android:color/transparent" />
                <TextView
                    android:id="@+id/whippedcream_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:text="+"
                    android:id="@+id/whippedcream_plus"
                    android:textSize="20sp"
                    android:onClick="increment3"
                    android:background="@android:color/transparent"
                    android:textAlignment="center"
                    android:visibility="visible" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHOCOLATE"
                    android:id="@+id/chocolate"
                    android:onClick="topping"
                    android:layout_marginStart="16dp"
                    android:paddingStart="16dp"
                    android:textSize="15sp" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="48dp"
                    android:text="-"
                    android:id="@+id/chocolate_minus"
                    android:textSize="20sp"
                    android:onClick="decrement4"
                    android:textAlignment="center"
                    android:background="@android:color/transparent" />
                <TextView
                    android:id="@+id/chocolate_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:text="+"
                    android:id="@+id/chocolate_plus"
                    android:textSize="20sp"
                    android:onClick="increment4"
                    android:background="@android:color/transparent"
                    android:textAlignment="center"
                    android:visibility="visible" />
            </LinearLayout>



            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:textSize="20sp"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:textStyle="normal"
                android:textColor="#630505"
                android:background="#e4e2e2"
                android:paddingBottom="10dp" />
            <TextView
                android:id="@+id/price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="20sp"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ORDER"
                android:id="@+id/button"
                android:textSize="20sp"
                android:onClick="submitOrder"
                android:background="@android:color/darker_gray"
                android:textAlignment="center"
                android:textColor="#630505"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp" />



        </LinearLayout>
    </ScrollView>